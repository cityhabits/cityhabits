<% content_for :title, "Events" %>


<div class="container container-content">
  <div class="row">
    <h2 class="col-md-offset-1">Upcoming Events</h2>
  </div>

  <%  date = (Date.today.to_date - 1.day) rescue nil%>
    <% @upcoming_events.each do |event| %>
     <%  if (date < event.event_date.to_date) %>
      <%  date = event.event_date.to_date %>
        <div class="row">
          <div class="col-md-5 col-md-offset-1">
            <h4><%= date.strftime("%A, %B %d")  %></h4>
          </div>
        </div>
      <% end %>
  <div class="row">
    <div class="col-md-7 col-md-offset-1 event-tile">
      <div class="row">
        <div class="col-md-2">

          <h5><%=  event.event_date.strftime(" %I:%M %p") %></h5>
          <h5><%= event.city %></h5>
        </div>
        <div class="col-md-4">
          <%=  image_tag event.avatar.url, class: "event-img"%>
        </div>
        <div class="col-md-6">
          <h4><%= event.venue %></h4>
          <h2><%= event.name %></h2>
          <p><%= event.description %></p>

            <% if(event.event_open) %>
              <%= link_to("Buy Tickets", event.event_page_url, html_options = {:class => "btn btn-primary col-md-5"})%>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
