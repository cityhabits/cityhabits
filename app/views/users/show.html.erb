<div class="container container-content">
  <div class="row">
    <div class="col-md-3 col-md-offset-2">
      <% if @user.avatar.file? %>
      <%=image_tag(@user.avatar.url, class: "user-pic")%>
      <% else %>
      <%=image_tag("https://upload.wikimedia.org/wikipedia/commons/4/47/Comic_image_missing.png", class: "user-pic")%>
      <% end %>
    </div>
    <div class="col-md-4 profile-section">
      <h2><%= @user.name%></h2><br>
      <p>
        <%= @user.bio%>
      </p>
    </div>
  </div>
</div>
